        <StackPanel>
            <TabControl x:Name="tabControl" Width="1000" Height="668" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Margin="2,2,2,2" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
